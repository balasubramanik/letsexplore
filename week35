for i in range(11):
    if(i>0 and i<10):
        print ('There were',11-i, 'in a bed and the little one said roll over, roll over. So they all rolled over and 1 fell out.')
    elif(i==10):
        print('There was 1 in a bed and the little one said Good night!')

